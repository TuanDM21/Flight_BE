FROM maven:3.9-eclipse-temurin-17

WORKDIR /app

# Copy all source code
COPY . .

# Expose application port and LiveReload port
EXPOSE 8080
EXPOSE 35729

# Run Spring Boot in development mode with DevTools (dependencies will be downloaded when needed)
CMD ["mvn", "spring-boot:run", "-Dspring-boot.run.jvmArguments=-Dspring.devtools.restart.enabled=true -Dspring.devtools.livereload.enabled=true -Dspring.profiles.active=local"]
