# MariaDB Configuration for Flight Management System
# Copy this to .env and update with your actual values

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:mariadb://mariadb:3306/airportdb
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your_secure_password_here
MYSQL_DATABASE=airportdb

# Alternative for external MariaDB (not in Docker)
# SPRING_DATASOURCE_URL=jdbc:mariadb://your_server:3306/airportdb

# JWT Configuration
JWT_SECRET=404E635266556A586E3272357538782F413F4428472B4B6250645367566B5970
JWT_EXPIRATION=86400000

# Azure Storage Configuration (if using)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=your_container_name

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# Server Port (optional, defaults to 8080)
PORT=8080

# MariaDB Root Password (for Docker container)
MYSQL_ROOT_PASSWORD=your_secure_password_here

# Additional MariaDB Configuration (optional)
MYSQL_CHARACTER_SET_SERVER=utf8mb4
MYSQL_COLLATION_SERVER=utf8mb4_unicode_ci

# Application-specific settings
TIMEZONE=Asia/Ho_Chi_Minh
