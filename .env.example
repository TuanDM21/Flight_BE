# Production Environment Configuration for Flight Management System
# Copy this to .env on your VPS and update with production values

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:mariadb://mariadb:3306/airport_db
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
MYSQL_DATABASE=airport_db

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_64_CHARS_MINIMUM
JWT_EXPIRATION=86400000

# Azure Storage Configuration (if using)
AZURE_STORAGE_CONNECTION_STRING=your_production_azure_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=your_production_container_name

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# Server Configuration
SERVER_PORT=8080

# MariaDB Root Password (for Docker container)
MYSQL_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# MariaDB Additional Configuration (for Docker)
MYSQL_USER=app_user
MYSQL_PASSWORD=CHANGE_THIS_APP_PASSWORD
MYSQL_PORT=3306

# MariaDB Configuration
MYSQL_CHARACTER_SET_SERVER=utf8mb4
MYSQL_COLLATION_SERVER=utf8mb4_unicode_ci

# Application-specific settings
TIMEZONE=Asia/Ho_Chi_Minh

# Logging Configuration (Production)
LOGGING_LEVEL_COM_PROJECT_QUANLYCANGHANGKHONG=WARN
LOGGING_LEVEL_ROOT=INFO

# Security Headers (Production)
SECURITY_HEADERS_ENABLED=true

# CORS Configuration (Production)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
